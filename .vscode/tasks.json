{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start DB Connection Proxy",
      "type": "shell",
      "command": "export $(grep DB_PORT server/.env | xargs) && kubectl port-forward services/postgres1 ${DB_PORT}:http --kubeconfig .kube/db-config --namespace db",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Start server",
      "type": "shell",
      "command": "uvicorn main:app --reload",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
    },
    {
      "label": "Start client",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "^X \\[(ERROR)\\] ((TS|NG)\\d+): (.*)$",
            "severity": 1,
            "code": 2,
            "message": 4
          },
          {
            "regexp": ""
          },
          {
            "regexp": "^\\s*(.*):(\\d+):(\\d+):$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Changes detected\\. Rebuilding\\.\\.\\."
          },
          "endsPattern": {
            "regexp": "Application bundle generation (complete|failed)"
          }
        }
      }
    },
    {
      "type": "shell",
      "command": "bash",
      "label": "Install dependencies",
      "args": ["scripts/install_dependencies.sh"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Compose up",
      "command": "docker compose up --build --force-recreate --wait --remove-orphans --pull always",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Compose down",
      "command": "docker compose down",
      "problemMatcher": []
    },
  ]
}
